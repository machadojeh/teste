      </div>
       <div id="in">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
      </div>
      <div id="down">
       <center> Fakebook Â© 2012 </center>
      </div> 
    </div>
  </body>
</html>
